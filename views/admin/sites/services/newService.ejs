<% layout('./admin') -%>
<div class="row">
  <div class="col-lg-12 mt-5">
    <div class="card">
      <div class="card-body">
        <div class="media-body">
          <div style="text-align: center;">
            <h4 class="mb-3">Nuevo Servicio</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-8 offset-2 mt-5">
    <div class="card">
      <form method="post">
      <div class="card-body">
        <h4 class="header-title" style="text-align: center;">Ingresa la informacion Solicitada</h4>
        <div class="form-group">
          <label for="titulo-input" class="col-form-label">Nombre de Paquete</label>
          <input class="form-control" type="text" id="titulo-input" name="nombre">
        </div>

        <label for="descripcion-input" class="col-form-label">Precio del producto</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" validate="/^\d*(.\d{2})?$/" class="form-control" name="precio" aria-label="Amount (to the nearest dollar)">
        </div>
        <div class="form-group">
          <label for="titulo-input" class="col-form-label">Cambios Disponibles</label>
          <input type="text" validate="/^[0-9]*$/" class="form-control" name="cambios" aria-label="Amount (to the nearest dollar)">
        </div>
        <div class="form-group">
          <label for="titulo-input" class="col-form-label">Ubicaciones Disponibles</label>
          <input type="text" validate="/^[0-9]*$/" class="form-control" name="ubicaciones" aria-label="Amount (to the nearest dollar)">
        </div>
        <label for="titulo-input" class="col-form-label">Duracion de Sesion</label>
        <div class="input-group mb-3">
            <input type="number" validate="/^[0-9]*$/" class="form-control" name="duracion" aria-label="Amount (to the nearest dollar)">
            <div class="input-group-append">
                <span class="input-group-text">Hrs.</span>
            </div>
        </div>
        <div class="form-group">
          <label for="titulo-input" class="col-form-label">Cantidad de fotos</label>
          <input type="text" validate="/^[0-9]*$/" class="form-control" name="cant_fotos" aria-label="Amount (to the nearest dollar)">
        </div>
        <div class="form-group">
          <label for="titulo-input" class="col-form-label">Informacion Extra</label>
          <input type="text" class="form-control" name="info" aria-label="Amount (to the nearest dollar)">
        </div>
        <div style="text-align:center;">
          <button type="submit" class="btn btn-primary mb-3 col-sm-4 order-4 " >
            <i class="fas fa-plus"></i> Agregar
          </button>
        </div>

      </div>
    </div>

    </div>
  </div>
</div>
