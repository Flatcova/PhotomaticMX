<% layout('account') -%>
  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100">
        <form method="post" class="login100-form validate-form login-form">
          <span class="login100-form-title p-b-34"> Ingresa a tu Cuenta </span>
          <div
            class="wrap-input100 rs1-wrap-input100 validate-input m-b-20"
            data-validate="Type user name"
          >
            <input
              id="first-name"
              class="input100"
              type="text"
              name="email"
              placeholder="Correo"
            />
            <span class="focus-input100"></span>
          </div>
          <div
            class="wrap-input100 rs2-wrap-input100 validate-input m-b-20"
            data-validate="Type password"
          >
            <input
              class="input100"
              type="password"
              name="password"
              placeholder="Contraseña"
            />
            <span class="focus-input100"></span>
          </div>

          <div class="container-login100-form-btn">
            <button type="submit" class="login100-form-btn">
              Iniciar Sesion
            </button>
          </div>

          <div class="w-full text-center p-t-27 p-b-150">
            <span class="txt1">¿Olvidaste tu contraseña? Recuperala </span>

            <a href="/forgotPassword" class="txt2"> aquí </a>
          </div>
          <div class="w-full text-center">
            <span class="txt2">2019 &copy; Az-Works Photography.</span>
          </div>
        </form>
        <div
          class="login100-more"
          style="background-image: url('assets/img/login-img/bg-01.jpg');"
        ></div>
      </div>
    </div>
  </div>


