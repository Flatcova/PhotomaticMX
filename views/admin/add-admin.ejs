<% layout('admin') -%>

<div class="container">
  <div class="jumbotron">
    <div class="col-md-12">
      <div class="box">
        <h1>Administrador</h1>
        <p>Ingresa los datos para agregar un nuevo administrador.</p>

        <% if (errors.length > 0) { %>
          <div class="alert alert-danger" role="alert">
              <strong>Error!</strong> <%= errors %>
          </div>
          <% } %>
          <hr>

          <form method="post">
            <div class="form-group">
              <label>Nombre</label>
              <input required type="text" class="form-control" id="firstName" placeholder="Ej. Juan Jose"name="firstName">
            </div>
            <div class="form-group">
              <label>Apellidos</label>
              <input required type="text" class="form-control" id="lastName" placeholder="Ej. Martinez Lopez"name="lastName">
            </div>
            <div class="form-group">
              <label>Correo</label>
              <input required type="email" class="form-control" id="email"
              placeholder="Ej. ejemplo@gmail.com" name="email">
            </div>
            <div class="form-group">
              <label>Constraseña</label>
              <input required type="password" name="password" class="form-control" id="password">
            </div>
            <div class="form-group">
              <label>Verificar Contraseña</label>
              <input required type="password" name="password_verf" class="form-control" id="password_verf">
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary"><i class="fa fa-user-plus"></i> Registrate</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="jumbotron">
      <div class="col-md-12">
        <div class="box">
          <h1>Administradores Registrados</h1>
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Admin</th>
              </tr>
            </thead>
            <tbody>
              <%for (var i = 0; i < data.length; i++) {%>
                <tr>
                  <td><%= data[i].profile.local.username %></td>
                  <td><%= data[i].profile.local.email %></td>
                  <td><%= data[i].profile.admin %></td>
                  <td><a href="/admin/administradores/delete?id=<%= data[i]._id %>" class="btn btn-primary">Eliminar</a></td>
                </tr>
                <% } %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
