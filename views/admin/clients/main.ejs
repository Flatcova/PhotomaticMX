<% layout('./admin') -%>
<div class="row">
  <div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
                <div class="media-body">
                    <h4 class="mb-3">Informacion de Clientes</h4>
                    Listado de todos los clientes registrados dentro de la plataforma
                    brindando informacion detallada de cada uno.
                </div>
                <a href="/admin/clients/newClient">
                  <button type="button" class="btn btn-info mb-3"><i class="fas fa-plus-square"></i> Agregar Nuevo Cliente</button>
                </a>
        </div>
    </div>
  </div>
  <%for (var i = 0; i < data.length; i++) {%>
  <div class="col-lg-6 mt-5">
      <div class="card">
          <div class="card-body">
              <div class="media mb-5">
                  <div class="media-body">
                      <h4 class="mb-3"><%= data[i].nombre %> <%= data[i].apellidos %></h4>
                      <p>Servicio Contratado: <%= data[i].servicio.nombre %></p>
                      <p>Fecha: <%= moment(data[i].created_At).locale('es').format('ll') %></p>
                  </div>
                  <ul>
                    <li>
                      <a href="/admin/clients/edit?id=<%= data[i]._id %>" class="btn btn-info mb-3"><i class="fas fa-edit"></i> Editar</a>
                    </li>
                    <li>
                      <a href="/admin/clients/delete?id=<%= data[i]._id %>" class="btn btn-danger mb-3"><i class="fas fa-trash"></i> Borrar</a>
                    </li>
                  </ul>
              </div>
          </div>
      </div>
    </div>
    <% } %>
</div>
