  <!-- Breadcrumb Area Start -->
  <section
    class="breadcrumb-area bg-img bg-overlay jarallax"
    style="background-image: url(assets/img/bg-img/38.jpg);"
  >
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-12">
          <div class="breadcrumb-content text-center">
            <h2 class="page-title">Servicios</h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Area End -->
  <!-- Why Choose Us Area Start -->
  <section class="why-choose-us-area bg-gray section-padding-80-0 clearfix">
    <div class="container">
      <div class="row">
        <%for (var i = 0; i < data.length; i++) {%>
        <!-- Single Why Choose Area -->
        <div class="col-md-6 col-lg-3">
          <div
            class="why-choose-us-content text-center mb-80 wow fadeInUp"
            data-wow-delay="100ms"
          >
            <div class="chosse-us-icon">
              <i class="fa fa-camera-retro" aria-hidden="true"></i>
            </div>
            <h4><%= data[i].nombre %></h4>
            <h2>$<%= data[i].precio%></h2>
            <div class="line"></div>
            <table class="table">
              <%if (data[i].cambios.length > 2){%>
                <tr>
                  <td>Cambios <strong><%= data[i].cambios%></strong></td>
                </tr>
              <%}else{%>
                <tr>
                  <td><strong><%= data[i].cambios%></strong> Cambio de Ropa</td>
                </tr>
              <%}%>
              <tr>
                <td><strong><%= data[i].ubicaciones%></strong> Ubicaci√≥n</td>
              </tr>
              <tr>
                <td><strong><%= data[i].duracion%> Hrs</strong> de Captura</td>
              </tr>
              <tr>
                <td>Total de: <strong><%= data[i].cant_fotos%></strong> Fotos</td>
              </tr>
              <tr>
                <td><strong>Detalle: </strong> <%= data[i].info%></td>
              </tr>
            </table>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </section>
  <!-- Why Choose  us Area End -->
