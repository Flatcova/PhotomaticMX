    style="background-image: url(assets/img/bg-img/38.jpg);"
  >
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-12">
          <div class="breadcrumb-content text-center">
            <h2 class="page-title">Contacto</h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Area End -->

  <!-- Contact Area Start -->
  <div class="contact-area section-padding-80-0">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6">
          <h2 class="contact-title mb-30">Trabajemos <br />Juntos</h2>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
          <!-- Contact Info -->
          <div class="contact-info mb-30">
            <p>Email</p>
            <a href="mailto:alfredocruz1096@gmail.com"
              >alfredocruz1096@gmail.com</a
            >
          </div>
          <!-- Contact Info -->
          <div class="contact-info mb-30">
            <p>Redes sociales</p>
            <a href="https://www.instagram.com/az_works_/"
              ><i class="ti-instagram" aria-hidden="true"></i
              ><span> Az_Works_</span></a
            >
          </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
          <!-- Contact Info -->
          <div class="contact-info mb-30">
            <p>Nos encontramos en:</p>
            <a href="#">Monterrey, Nuevo León México.</a>
          </div>
          <div class="contact-info mb-30">
            <div id="map">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d230187.55063637407!2d-100.4431796045147!3d25.648728129359352!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86629531b437f8f5%3A0xa3d3d3ca6ac89894!2sMonterrey%2C+N.L.%2C+M%C3%A9xico!5e0!3m2!1ses!2sbd!4v1554409090850!5m2!1ses!2sbd"
                frameborder="0"
                style="border:0"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Contact Area End -->

  <div class="comment-area section-padding-0-80">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-9">
          <!-- Leave A Reply -->
          <div class="alime-contact-form mt-50">
            <h4 class="mb-30">Mandanos un mensaje</h4>

            <!-- Form -->
            <form method="post" id="sendEmail">
              <div class="row">
                <div class="col-12 col-md-6">
                  <input
                    type="text"
                    name="name"
                    class="form-control mb-30"
                    placeholder="Tu Nombre"
                  />
                </div>
                <div class="col-12 col-md-6">
                  <input
                    type="email"
                    name="email"
                    class="form-control mb-30"
                    placeholder="Tu Correo"
                  />
                </div>
                <div class="col-12">
                  <input
                    type="text"
                    name="subject"
                    class="form-control mb-30"
                    placeholder="Asunto"
                  />
                </div>
                <div class="col-12">
                  <textarea
                    name="message"
                    class="form-control mb-30"
                    placeholder="Redacta tu Mensaje"
                  ></textarea>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn alime-btn btn-2 mt-15">
                    Enviar Mensaje
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
